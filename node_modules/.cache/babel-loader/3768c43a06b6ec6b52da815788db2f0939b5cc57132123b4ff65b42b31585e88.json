{"ast":null,"code":"import { ref, computed } from 'vue';\nimport ModalOpen from '@/components/ModalOpen.vue'; // Замість цього використовуйте правильний шлях до компонента ModalOpen\n\n// Дані\n\nexport default {\n  __name: 'ProductsPage',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const isModalVisible = ref(false);\n    const selectedProduct = ref(null);\n    const selectedOrder = ref(null);\n    const orders = ref([]); // Ваші дані замовлень\n    const productInfo = ref({}); // Інформація про продукти\n\n    // Методи\n    function selectOrder(order) {\n      selectedOrder.value = order;\n    }\n    function closeProductDetails() {\n      selectedOrder.value = null;\n    }\n    function removeOrder(orderId) {\n      // Логіка видалення замовлення\n      console.log(`Removing order with ID: ${orderId}`);\n    }\n    function removeProduct(productId) {\n      // Логіка видалення продукту\n      console.log(`Removing product with ID: ${productId}`);\n      closeModal(); // Закрити модальне вікно після видалення\n    }\n    function openModal(product) {\n      selectedProduct.value = product;\n      isModalVisible.value = true;\n    }\n    function closeModal() {\n      isModalVisible.value = false;\n      selectedProduct.value = null;\n    }\n    function getProductCount(orderId) {\n      // Логіка для отримання кількості продуктів у замовленні\n      return orders.value.find(order => order.id === orderId)?.productIds.length || 0;\n    }\n    function formatShortDate(date) {\n      // Логіка для форматування короткої дати\n      return new Date(date).toLocaleDateString();\n    }\n    function formatLongDate(date) {\n      // Логіка для форматування довгої дати\n      return new Date(date).toLocaleDateString('en-US', {\n        year: 'numeric',\n        month: 'long',\n        day: 'numeric'\n      });\n    }\n    const __returned__ = {\n      isModalVisible,\n      selectedProduct,\n      selectedOrder,\n      orders,\n      productInfo,\n      selectOrder,\n      closeProductDetails,\n      removeOrder,\n      removeProduct,\n      openModal,\n      closeModal,\n      getProductCount,\n      formatShortDate,\n      formatLongDate,\n      ref,\n      computed,\n      ModalOpen\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","computed","ModalOpen","isModalVisible","selectedProduct","selectedOrder","orders","productInfo","selectOrder","order","value","closeProductDetails","removeOrder","orderId","console","log","removeProduct","productId","closeModal","openModal","product","getProductCount","find","id","productIds","length","formatShortDate","date","Date","toLocaleDateString","formatLongDate","year","month","day"],"sources":["/home/vadim/my-test/src/views/ProductsPage.vue"],"sourcesContent":["<template>\n  <section class=\"orders\">\n    <div class=\"orders__container\">\n      <ul>\n        <li \n          class=\"orders__item\"\n          :class=\"{\n            'orders__item--compact': selectedOrder && selectedOrder.productIds.length > 0,\n            'orders__item--full': !selectedOrder || selectedOrder.productIds.length === 0,\n            'orders__item--active': selectedOrder && selectedOrder.id === order.id && selectedOrder.productIds.length > 0\n          }\"\n          v-for=\"order in orders\"\n          :key=\"order.id\"\n          @click=\"selectOrder(order)\"       \n        >\n          <h2 class=\"orders__title\" v-if=\"!selectedOrder || selectedOrder.productIds.length === 0\">\n            Длинное название прихода\n          </h2>\n          <div class=\"orders__info_first\">\n            <p>{{ getProductCount(order.id) }}</p>\n            <span>Продукты</span>\n          </div>\n          <div class=\"orders__info\">\n            <time>{{ formatShortDate(order.date) }}</time>\n            <time>{{ formatLongDate(order.date) }}</time>\n      